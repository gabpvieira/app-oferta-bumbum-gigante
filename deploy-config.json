{
  "name": "projeto-gluteo-gigante",
  "version": "1.0.0",
  "description": "Premium fitness membership app - 30-day glute transformation program",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "command": "./build.sh",
    "output": "client/dist"
  },
  "deployment": {
    "type": "fullstack",
    "port": 5000,
    "static": "client/dist",
    "server": "dist/index.js"
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "5000"
  },
  "features": {
    "pwa": true,
    "mobile_optimized": true,
    "responsive": true,
    "seo_optimized": true
  }
}